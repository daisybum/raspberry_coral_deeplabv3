FROM python:3.9-slim-bullseye

ENV DEBIAN_FRONTEND=noninteractive

# 필수 시스템 패키지 설치 (gnupg 추가)
RUN apt-get update && apt-get install -y --no-install-recommends \
    apt-transport-https \
    ca-certificates \
    curl \
    gnupg \
    && rm -rf /var/lib/apt/lists/*

# Coral 패키지 저장소 추가 및 GPG 키 등록 후 libedgetpu1-std 설치
RUN echo "deb https://packages.cloud.google.com/apt coral-edgetpu-stable main" | tee /etc/apt/sources.list.d/coral-edgetpu.list && \
    curl https://packages.cloud.google.com/apt/doc/apt-key.gpg | apt-key add - && \
    apt-get update && apt-get install -y --no-install-recommends libedgetpu1-std

# pycoral와 opencv-python 설치
RUN pip install --no-cache-dir pycoral opencv-python

WORKDIR /app
COPY . /app

# CMD ["/bin/bash"]
